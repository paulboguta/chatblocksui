{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**/*",
      "!src/components/ui/**",
      "!src/app/global.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "recommended": true
    }
  }
}
